<% if @user.errors.any? %>
<div class="alert alert-error">
	<h4><%= pluralize(@user.errors.count, "error") %>
	prohibited this user from being saved:</h4>
	<p>
		There were problems with the following fields:
	</p>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>